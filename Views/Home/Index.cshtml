
<style>
    .card-deck {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .card {
        margin: 20px;
        max-width: 300px;
        width: 100%;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 5px;
        background-color: #f2f2f2;
    }

        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
    }

    .card-text {
        font-style: italic;
        text-align: center;
        margin-bottom: 20px;
    }

    .list-group-item {
        border: none;
    }

    a {
        text-decoration: none;
    }

</style>
<h1 class="text-center text-color:white; mb-5">TOP OFFERS</h1>
<div class="card-deck">
    @foreach (var auction in Model)
    {
        <div class="card">
            <a href="@Url.Action("Details", "Auction", new { id = auction.AuctionId })" class="card-link">
                <img src="@auction.ImagePath" class="card-img-top" alt="Image of @auction.Make @auction.Model">
                <div class="card-body">
                    <h5 class="card-title">@auction.Make @auction.Model</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Price: @auction.Price$</li>
                    </ul>
                </div>
            </a>
        </div>
    }
</div>
