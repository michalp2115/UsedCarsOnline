@model UsedCarsOnline.ViewModels.SearchViewModel

<h2>Search</h2>

@using (Html.BeginForm("Result", "Home", FormMethod.Get))
{
        <form asp-controller="Auction" asp-action="Result">
            <div class="form-group" >
            @Html.LabelFor(m => m.Make)
            @Html.TextBoxFor(m => m.Make, new { @class = "form-control" })
            </div>
            <div class="form-group">
            @Html.LabelFor(m => m.Model)
            @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
            </div>
            <div class="form-group">
            @Html.LabelFor(m => m.BodyType)
            @Html.TextBoxFor(m => m.BodyType, new { @class = "form-control" })
            </div>
            <div class="form-group">
            @Html.LabelFor(m => m.FuelType)
            @Html.TextBoxFor(m => m.FuelType, new { @class = "form-control" })
            </div>
            <div class="form-group">
            @Html.LabelFor(m => m.Year)
            @Html.TextBoxFor(m => m.Year, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
}